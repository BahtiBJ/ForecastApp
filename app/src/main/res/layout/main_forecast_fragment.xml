<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardWithCity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorPrimaryVariant"
        app:cardCornerRadius="0dp"
        app:cardElevation="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/caviar_dreams"
            android:gravity="center"
            android:text="Город"
            android:textSize="35sp" />


    </androidx.cardview.widget.CardView>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/main_scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardWithCity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextSwitcher
                android:id="@+id/temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    style="@style/MYText"
                    android:text="+36℃"
                    android:textSize="65sp" />

                <TextView
                    style="@style/MYText"
                    android:textSize="65sp" />

            </TextSwitcher>

            <View
                style="@style/Separator"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/separator" />

            <TextSwitcher
                android:id="@+id/feelsLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    style="@style/MYText"
                    android:text="Ощущается как\n+136℃"
                    android:textSize="35sp" />

                <TextView
                    style="@style/MYText"
                    android:textSize="35sp" />

            </TextSwitcher>

            <View
                style="@style/Separator"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/separator" />


            <TextSwitcher
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    style="@style/MYText"
                    android:text="Переменная облачность"
                    android:textSize="45sp" />

                <TextView
                    style="@style/MYText"
                    android:textSize="45sp" />

            </TextSwitcher>

            <View
                style="@style/Separator"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/separator" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="325dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:elevation="5dp"
                    app:cardBackgroundColor="#001650AF"
                    app:cardCornerRadius="6dp">

                    <TextView
                        android:id="@+id/minTemp"
                        style="@style/MYText"
                        android:layout_margin="15dp"
                        android:text="Минимальная температура\n+26℃"
                        android:textSize="25sp" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="325dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:elevation="5dp"
                    app:cardBackgroundColor="#001650AF"
                    app:cardCornerRadius="6dp">

                    <TextView
                        android:id="@+id/maxTemp"
                        style="@style/MYText"
                        android:layout_margin="15dp"
                        android:text="Максимальная температура\n+46℃"
                        android:textSize="25sp" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="325dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:elevation="5dp"
                    app:cardBackgroundColor="#001650AF"
                    app:cardCornerRadius="6dp">

                    <TextView
                        android:id="@+id/humidity"
                        style="@style/MYText"
                        android:layout_margin="15dp"
                        android:text="Влажность 123%"
                        android:textSize="30sp" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="325dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:elevation="5dp"
                    app:cardBackgroundColor="#001650AF"
                    app:cardCornerRadius="6dp">

                    <TextView
                        android:id="@+id/windSpeed"
                        style="@style/MYText"
                        android:layout_margin="15dp"
                        android:text="Скорость ветра ..."
                        android:textSize="30sp" />

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="325dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:elevation="5dp"
                    app:cardBackgroundColor="#001650AF"
                    app:cardCornerRadius="6dp">

                    <TextView
                        android:id="@+id/pressure"
                        style="@style/MYText"
                        android:layout_margin="15dp"
                        android:text="Давление 155 мм.рт.ст."
                        android:textSize="25sp" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="83dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="425dp" />

</androidx.constraintlayout.widget.ConstraintLayout>